{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "rm (Resolve-Path ${workspaceFolder}/dist/*) && python setup-capi.py bdist_wheel && python setup-engine.py bdist_wheel && python setup-engine.py sdist && python setup-capi.py sdist ",
            "problemMatcher": []
        },
        {
            "label": "Install",
            "type": "shell",
            "command": "python -m pip install --user --force-reinstall --no-deps (Resolve-Path ${workspaceFolder}/dist/*.whl)",
            "problemMatcher": []
        },
        {
            "label": "Build and Install",
            "dependsOn":["Build", "Install"],
            "dependsOrder": "sequence",
            "problemMatcher":[]
        }
    ]
}